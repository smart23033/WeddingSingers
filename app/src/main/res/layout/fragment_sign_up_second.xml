<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/fragment_horizontal_margin"
    android:layout_marginRight="@dimen/fragment_horizontal_margin"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    android:layout_marginBottom="@dimen/fragment_vertical_margin"
    android:background="@color/colorPrimaryPink"
    tools:context="com.weddingsingers.wsapp.login.SignUpSecondFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_second_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sign_up_second_et_horizontal_margin"
        android:layout_marginRight="@dimen/sign_up_second_et_horizontal_margin"
        android:layout_marginTop="@dimen/sign_up_second_et_margin_top">

        <EditText
            android:id="@+id/sign_up_second_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_second_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_second_text_email"
        android:layout_marginLeft="@dimen/sign_up_second_et_horizontal_margin"
        android:layout_marginRight="@dimen/sign_up_second_et_horizontal_margin">

        <EditText
            android:id="@+id/sign_up_second_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_second_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_second_text_password"
        android:layout_marginLeft="@dimen/sign_up_second_et_horizontal_margin"
        android:layout_marginRight="@dimen/sign_up_second_et_horizontal_margin">

        <EditText
            android:id="@+id/sign_up_second_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_second_text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_second_text_name"
        android:layout_marginLeft="@dimen/sign_up_second_et_horizontal_margin"
        android:layout_marginRight="@dimen/sign_up_second_et_horizontal_margin">

        <EditText
            android:id="@+id/sign_up_second_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>



    <ImageButton
        android:id="@+id/sign_up_second_btn_sign_up"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_btn_next" />

</RelativeLayout>
