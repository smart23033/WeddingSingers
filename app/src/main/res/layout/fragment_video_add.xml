<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.weddingsingers.wsapp.function.mypage.singervideomgm.VideoAddFragment">

    <RelativeLayout
        android:id="@+id/video_add_rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryPink">

        <TextView
            android:id="@+id/video_add_tv_title_bar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:text="동영상 추가" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_add_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_add_rl_title_bar"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/video_add_tv_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="제목" />

        <EditText
            android:id="@+id/video_add_et_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_add_tv_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_add_rl_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_add_rl_title"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/video_add_tv_url"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="동영상 주소" />

        <EditText
            android:id="@+id/video_add_et_url"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_add_tv_url" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_add_rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_add_rl_url"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/video_add_tv_content"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="설명" />

        <EditText
            android:id="@+id/video_add_et_content"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_add_tv_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_add_rl_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_add_rl_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/video_add_tv_hashtag"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="해시태그" />

        <EditText
            android:id="@+id/video_add_et_hahstag"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_add_tv_hashtag" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_add_rl_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_add_rl_hashtag"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/video_add_btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="83dp"
            android:layout_marginStart="83dp"
            android:text="추가" />

        <Button
            android:id="@+id/video_add_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/video_add_btn_apply"
            android:layout_toRightOf="@+id/video_add_btn_apply"
            android:text="취소" />
    </RelativeLayout>
</RelativeLayout>
