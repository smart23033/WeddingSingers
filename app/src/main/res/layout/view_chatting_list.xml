<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/view_chatting_list_riv_picture"
        android:layout_width="@dimen/view_profile_riv_profile_width"
        android:layout_height="@dimen/view_profile_riv_profile_height"
        android:layout_marginBottom="@dimen/view_profile_riv_profile_vertical_margin"
        android:layout_marginRight="@dimen/view_profile_riv_profile_margin_right"
        android:layout_marginTop="@dimen/view_profile_riv_profile_vertical_margin"
        android:paddingTop="@dimen/view_profile_riv_profile_padding_top"
        android:scaleType="fitCenter"
        android:src="@drawable/view_profile_ic_person"
        app:riv_corner_radius="@dimen/view_profile_riv_profile_corner_radius"
        app:riv_tile_mode="clamp" />

    <TextView
        android:id="@+id/view_chatting_list_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view_chatting_list_riv_picture"
        android:text="name" />

    <TextView
        android:id="@+id/view_chatting_list_tv_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_chatting_list_tv_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view_chatting_list_riv_picture"
        android:text="아 좀 깎아줘 개넘색갸" />

</RelativeLayout>