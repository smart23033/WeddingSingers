<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/view_vertical_margin"
    android:layout_marginLeft="@dimen/view_profile_margin_left"
    android:layout_marginRight="@dimen/view_profile_margin_right"
    android:layout_marginTop="@dimen/view_vertical_margin"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/view_profile_rl_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/view_profile_riv_profile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/view_profile_ic_person"
            app:riv_corner_radius="30dp"
            app:riv_tile_mode="clamp" />

        <TextView
            android:id="@+id/view_profile_tv_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/view_profile_riv_profile"
            android:text="singer name" />


        <!--android:textAppearance="?android:attr/textAppearanceSmall"가 적용이 안됨. -->
        <TextView
            android:id="@+id/view_profile_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_profile_tv_singer_name"
            android:layout_toRightOf="@id/view_profile_riv_profile"
            android:maxLines="2"
            android:maxWidth="180dp"
            android:text="default comment default comment default comment default comment
        default comment default comment default comment default comment default comment "
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

    <Button
        android:id="@+id/view_profile_btn_reserve"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:text="reserve"
        android:textSize="8sp" />

</LinearLayout>