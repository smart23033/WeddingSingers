<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function.search.search.SearchActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/search_fl_toolbar"
        >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_toolbar"
        android:title="" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/search_tv_keyword"
         android:textSize="@dimen/search_tv_keyword_text_size"
         android:gravity="left|center_vertical"
         android:layout_marginLeft="@dimen/search_tv_search_margin_left"
         android:layout_marginRight="@dimen/search_tv_search_margin_right"
         android:visibility="gone"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_et_keyword"
        android:hint="search..."
        android:layout_marginLeft="@dimen/search_et_search_margin_left"
        android:layout_marginRight="@dimen/search_et_search_margin_right"
        />

        <ToggleButton
            android:id="@+id/search_toggle_filter"
            android:layout_width="@dimen/search_btn_filter_width"
            android:layout_height="@dimen/search_btn_filter_height"
            android:layout_gravity="right|center_vertical"
            android:scaleType="centerCrop"
            android:textOn=""
            android:textOff=""
            android:checked="false"
            android:background="@drawable/search_selector"
            android:layout_marginRight="@dimen/search_btn_filter_margin_right"
            android:layout_marginBottom="@dimen/search_btn_filter_margin_bottom"
       />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_fl_toolbar"
        android:id="@+id/act_search_fl_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
