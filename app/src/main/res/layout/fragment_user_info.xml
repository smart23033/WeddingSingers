<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/fragment_vertical_margin"
    android:layout_marginLeft="@dimen/fragment_horizontal_margin"
    android:layout_marginRight="@dimen/fragment_horizontal_margin"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    tools:context="com.weddingsingers.wsapp.function.mypage.mypage.UserInfoFragment">

    <RelativeLayout
        android:id="@+id/user_info_rl_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_info_riv_picture"
            android:layout_width="@dimen/user_info_riv_picture_size"
            android:layout_height="@dimen/user_info_riv_picture_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/video_ic_num_of_person"
            app:riv_corner_radius="@dimen/user_info_riv_picture_corner_radius"
            app:riv_tile_mode="clamp" />

    </RelativeLayout>

    <View
        android:id="@+id/user_info_divider_name"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/user_info_divider_name_margin_top"
        android:layout_height="@dimen/my_page_customer_divider_height"
        android:layout_below="@+id/user_info_rl_picture"
        android:background="@color/my_page_customer_divider_color" />

    <RelativeLayout
        android:id="@+id/user_info_rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_rl_height"
        android:gravity="center_vertical"
        android:layout_below="@+id/user_info_divider_name">

        <TextView
            android:id="@+id/user_info_tv_name"
            android:layout_width="@dimen/user_info_tv_width"
            android:layout_height="wrap_content"
            android:text="@string/user_info_tv_name_text"
            android:textColor="@color/user_info_tv_text_color" />

        <TextView
            android:id="@+id/user_info_tv_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_info_tv_name"
            android:text="name"
            android:textColor="@color/user_info_tv_text_color" />

    </RelativeLayout>

    <View
        android:id="@+id/user_info_divider_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_page_customer_divider_height"
        android:layout_below="@+id/user_info_rl_name"
        android:background="@color/my_page_customer_divider_color" />

    <RelativeLayout
        android:id="@+id/user_info_rl_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_rl_height"
        android:gravity="center_vertical"
        android:layout_below="@+id/user_info_divider_email">

        <TextView
            android:id="@+id/user_info_tv_email"
            android:layout_width="@dimen/user_info_tv_width"
            android:layout_height="wrap_content"
            android:text="@string/user_info_tv_email_text"
            android:textColor="@color/user_info_tv_text_color" />

        <TextView
            android:id="@+id/user_info_tv_email_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_info_tv_email"
            android:text="email"
            android:textColor="@color/user_info_tv_text_color" />

    </RelativeLayout>

    <View
        android:id="@+id/user_info_divider_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_page_customer_divider_height"
        android:layout_below="@+id/user_info_rl_email"
        android:background="@color/my_page_customer_divider_color" />

    <RelativeLayout
        android:id="@+id/user_info_rl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_rl_height"
        android:gravity="center_vertical"
        android:layout_below="@+id/user_info_divider_phone">

        <TextView
            android:id="@+id/user_info_tv_phone"
            android:layout_width="@dimen/user_info_tv_width"
            android:layout_height="wrap_content"
            android:text="@string/user_info_tv_phone_text"
            android:textColor="@color/user_info_tv_text_color" />

        <TextView
            android:id="@+id/user_info_tv_phone_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_info_tv_phone"
            android:text="010-0000-0000"
            android:textColor="@color/user_info_tv_text_color" />

    </RelativeLayout>

    <View
        android:id="@+id/user_info_divider_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_page_customer_divider_height"
        android:layout_below="@+id/user_info_rl_phone"
        android:background="@color/my_page_customer_divider_color" />

    <RelativeLayout
        android:id="@+id/user_info_rl_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_rl_height"
        android:gravity="center_vertical"
        android:layout_below="@+id/user_info_divider_password">

        <TextView
            android:id="@+id/user_info_tv_password"
            android:layout_width="@dimen/user_info_tv_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/user_info_tv_password_text"
            android:textColor="@color/user_info_tv_text_color" />

        <EditText
            android:id="@+id/user_info_et_password"
            android:layout_width="@dimen/user_info_et_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_info_tv_password"
            android:inputType="textPassword" />

    </RelativeLayout>

    <View
        android:id="@+id/user_info_divider_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_page_customer_divider_height"
        android:layout_below="@+id/user_info_rl_password"
        android:background="@color/my_page_customer_divider_color" />

    <RelativeLayout
        android:id="@+id/user_info_rl_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_rl_height"
        android:gravity="center_vertical"
        android:layout_below="@+id/user_info_divider_password_confirm"
        android:textColor="@color/user_info_tv_text_color">

        <TextView
            android:id="@+id/user_info_tv_password_confirm"
            android:layout_width="@dimen/user_info_tv_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/user_info_tv_password_confirm_text"
            android:textColor="@color/user_info_tv_text_color" />

        <EditText
            android:id="@+id/user_info_et_password_confirm"
            android:layout_width="@dimen/user_info_et_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_info_tv_password_confirm"
            android:inputType="textPassword" />

    </RelativeLayout>

    <View
        android:id="@+id/user_info_divider_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_page_customer_divider_height"
        android:layout_below="@+id/user_info_rl_password_confirm"
        android:background="@color/my_page_customer_divider_color" />

    <RelativeLayout
        android:id="@+id/user_info_rl_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_info_divider_btn"
        android:layout_marginTop="@dimen/user_info_rl_btn_margin_top"
        android:gravity="center">

        <Button
            android:id="@+id/user_info_btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_radius"
            android:padding="@dimen/user_info_btn_padding"
            android:text="@string/user_info_btn_apply_text" />

        <Button
            android:id="@+id/user_info_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_info_btn_cancel_margin_left"
            android:layout_toRightOf="@+id/user_info_btn_apply"
            android:background="@drawable/custom_btn_radius"
            android:padding="@dimen/user_info_btn_padding"
            android:text="@string/user_info_btn_cancel_text" />

    </RelativeLayout>

</RelativeLayout>
