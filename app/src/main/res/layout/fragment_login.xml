<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weddingsingers.wsapp.login.LoginFragment">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/login_et_horizontal_margin"
        android:layout_marginRight="@dimen/login_et_horizontal_margin"
        android:layout_marginTop="@dimen/login_et_margin_top">
        <EditText
            android:id="@+id/login_et_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_text_email"
        android:layout_alignLeft="@+id/login_text_email"
        android:layout_alignStart="@+id/login_text_email"
        android:layout_alignRight="@+id/login_text_email"
        android:layout_alignEnd="@+id/login_text_email">
        <EditText
            android:id="@+id/login_et_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/login_btn_login"
        android:layout_below="@+id/login_text_password"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook login"
        android:id="@+id/login_btn_facebook_login"
        android:layout_below="@+id/login_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
