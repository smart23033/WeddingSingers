<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/fragment_vertical_margin"
    android:layout_marginLeft="@dimen/fragment_horizontal_margin"
    android:layout_marginRight="@dimen/fragment_horizontal_margin"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    android:background="@color/colorPrimaryPink"
    tools:context="com.weddingsingers.wsapp.login.LoginIntroFragment">

    <TextView
        android:id="@+id/login_intro_tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to WeddingSingers!"
        android:layout_marginLeft="@dimen/login_intro_tv_intro_horizontal_margin"
        android:layout_marginRight="@dimen/login_intro_tv_intro_horizontal_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/login_intro_tv_intro_text_size" />

    <Button
        android:id="@+id/login_intro_btn_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_intro_tv_intro"
        android:layout_marginLeft="@dimen/login_intro_btn_facebook_login_horizontal_margin"
        android:layout_marginRight="@dimen/login_intro_btn_facebook_login_horizontal_margin"
        android:layout_marginTop="@dimen/login_intro_btn_facebook_login_margin_top"
        android:background="#415e9b"
        android:text="facebook login"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/login_intro_ll_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_intro_btn_facebook_login"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/login_intro_ll_btn_group_horizontal_margin"
        android:layout_marginRight="@dimen/login_intro_ll_btn_group_horizontal_margin"
        android:layout_marginTop="@dimen/login_intro_ll_btn_group_margin_top">

        <Button
            android:id="@+id/login_intro_btn_sign_up"
            android:layout_width="@dimen/login_intro_btn_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/login_intro_btn_sign_up_margin_right"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="sign up"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/login_intro_btn_login"
            android:layout_width="@dimen/login_intro_btn_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/login_intro_btn_sign_up"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="login"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_intro_tv_clause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_intro_ll_btn_group"
        android:layout_marginLeft="@dimen/login_intro_tv_clause_margin_left"
        android:layout_marginTop="@dimen/login_intro_tv_clause_margin_top"
        android:text="review terms and conditions"
        android:textColor="@android:color/white"
        android:textSize="@dimen/login_intro_tv_clause_text_size" />


</RelativeLayout>
