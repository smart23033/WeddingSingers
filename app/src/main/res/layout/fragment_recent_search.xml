<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context=".function.search.search.RecentSearchFragment">

    <TextView
        android:id="@+id/search_tv_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recent" />


    <Button
        android:id="@+id/search_btn_recent"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/search_tv_recent"
        android:layout_alignStart="@+id/search_tv_recent"
        android:layout_below="@+id/search_tv_recent"
        android:text="recent keyword" />

</RelativeLayout>
