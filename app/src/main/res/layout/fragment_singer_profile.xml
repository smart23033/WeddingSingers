<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/fragment_vertical_margin"
    android:layout_marginLeft="@dimen/fragment_horizontal_margin"
    android:layout_marginRight="@dimen/fragment_horizontal_margin"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    tools:context=".main.mypage.SingerProfileFragment">

    <ImageButton
        android:id="@+id/singer_profile_img_btn_modify"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/my_page_btn_modify" />

    <RelativeLayout
        android:id="@+id/singer_profile_rl_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/singer_profile_tv_basic_info"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="기본 정보"
            android:textColor="@color/colorLightPink" />

        <TextView
            android:id="@+id/singer_profile_tv_basic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/singer_profile_tv_basic_info"
            android:text="블랙넛" />

        <TextView
            android:id="@+id/singer_profile_tv_basic_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singer_profile_tv_basic_name"
            android:layout_toRightOf="@+id/singer_profile_tv_basic_info"
            android:text="축가 전문 개고수!" />

        <TextView
            android:id="@+id/singer_profile_tv_basic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singer_profile_tv_basic_comment"
            android:layout_toRightOf="@+id/singer_profile_tv_basic_info"
            android:text="지역 : 서울" />

        <TextView
            android:id="@+id/singer_profile_tv_basic_composition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singer_profile_tv_basic_location"
            android:layout_toRightOf="@+id/singer_profile_tv_basic_info"
            android:text="구성 : 듀엣" />

        <TextView
            android:id="@+id/singer_profile_tv_basic_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singer_profile_tv_basic_composition"
            android:layout_toRightOf="@+id/singer_profile_tv_basic_info"
            android:text="테마 : 발라드" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/singer_profile_rl_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singer_profile_rl_basic"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/singer_profile_intro_tv_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="자기 소개"
            android:textColor="@color/colorLightPink" />

        <TextView
            android:id="@+id/singer_profile_intro_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/singer_profile_intro_tv_title"
            android:text="마치 제가 사랑하는 사람에게 노래를 부르는 것처럼 진심을 담아 부르겠습니다. 기호 1번 꼭 뽑아주십시오!" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/singer_profile_rl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singer_profile_rl_intro"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/singer_profile_price_tv_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="가격 정보"
            android:textColor="@color/colorLightPink" />

        <TextView
            android:id="@+id/singer_profile_price_tv_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/video_tv_standard_margin_right"
            android:layout_toRightOf="@id/singer_profile_price_tv_title"
            android:text="special" />

        <TextView
            android:id="@+id/singer_profile_price_tv_special_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/video_tv_standard_margin_right"
            android:layout_toRightOf="@id/singer_profile_price_tv_special"
            android:text="￦ 300,000" />

        <TextView
            android:id="@+id/singer_profile_price_tv_std"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singer_profile_price_tv_special"
            android:layout_marginRight="@dimen/video_tv_standard_margin_right"
            android:layout_toRightOf="@id/singer_profile_price_tv_title"
            android:text="standard" />

        <TextView
            android:id="@+id/singer_profile_price_tv_std_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singer_profile_price_tv_special_price"
            android:layout_marginRight="@dimen/video_tv_standard_margin_right"
            android:layout_toRightOf="@id/singer_profile_price_tv_std"
            android:text="￦ 100,000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/singer_profile_rl_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singer_profile_rl_price"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/singer_profile_song_tv_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="곡목록"
            android:textColor="@color/colorLightPink" />

        <TextView
            android:id="@+id/singer_profile_song_tv_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/video_tv_standard_margin_right"
            android:layout_toRightOf="@id/singer_profile_song_tv_title"
            android:text="she's gone\nsay good bye \nfarewell taxi" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/singer_profile_rl_my_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singer_profile_rl_song"
        android:layout_marginTop="10dp"
        android:clickable="true">

        <TextView
            android:id="@+id/singer_profile_my_video_tv_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="동영상 관리"
            android:textColor="@color/colorLightPink" />

        <ImageButton
            android:id="@+id/singer_profile_my_video_iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_detail_arrow" />
    </RelativeLayout>

</RelativeLayout>
