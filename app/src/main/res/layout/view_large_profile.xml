<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/view_vertical_margin"
    android:layout_marginLeft="@dimen/view_horizontal_margin"
    android:layout_marginRight="@dimen/view_horizontal_margin"
    android:layout_marginTop="@dimen/view_vertical_margin">

    <RelativeLayout
        android:id="@+id/view_large_profile_rl_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_large_profile_rl_profile_margin_left"
        android:layout_marginRight="@dimen/view_large_profile_rl_profile_margin_right">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/view_large_profile_riv_profile"
            android:layout_width="@dimen/view_large_profile_riv_profile_width"
            android:layout_height="@dimen/view_large_profile_riv_profile_height"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_large_profile_riv_profile_margin_bottom"
            android:layout_marginRight="@dimen/view_large_profile_riv_profile_margin_right"
            android:layout_marginTop="@dimen/view_large_profile_riv_profile_margin_top"
            android:paddingTop="@dimen/view_large_profile_riv_profile_padding_top"
            android:scaleType="fitCenter"
            android:src="@drawable/view_profile_ic_person"
            app:riv_corner_radius="@dimen/view_large_profile_riv_profile_corner_radius"
            app:riv_tile_mode="clamp" />

        <TextView
            android:id="@+id/view_large_profile_tv_user_name"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_large_profile_riv_profile"
            android:layout_centerHorizontal="true"
            android:text="user name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_large_profile_rl_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_large_profile_rl_info_margin_right"
        android:layout_marginTop="@dimen/view_large_profile_rl_info_margin_top"
        android:layout_toRightOf="@+id/view_large_profile_rl_profile">

        <TextView
            android:id="@+id/view_large_profile_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

        <TextView
            android:id="@+id/view_large_profile_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_large_profile_tv_location"
            android:layout_marginTop="@dimen/view_large_profile_tv__margin_top"
            android:text="date"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

        <TextView
            android:id="@+id/view_large_profile_tv_songs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_large_profile_tv_date"
            android:layout_marginTop="@dimen/view_large_profile_tv__margin_top"
            android:text="songs"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_large_profile_rl_detail_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_large_profile_rl_detail_info_margin_top"
        android:layout_toRightOf="@+id/view_large_profile_rl_info">

        <TextView
            android:id="@+id/view_large_profile_tv_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seoul"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

        <TextView
            android:id="@+id/view_large_profile_tv_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_large_profile_tv_detail_location"
            android:layout_marginTop="@dimen/view_large_profile_tv__margin_top"
            android:text="2016. 4. 29"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

        <TextView
            android:id="@+id/view_large_profile_tv_detail_songs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_large_profile_tv_detail_date"
            android:layout_marginTop="@dimen/view_large_profile_tv__margin_top"
            android:text="Lose yourself - Eminem"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_large_profile_rl_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_large_profile_rl_info"
        android:layout_alignStart="@+id/view_large_profile_rl_info"
        android:layout_below="@+id/view_large_profile_rl_info"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/view_large_profile_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_large_profile_tv__margin_top"
            android:text="special"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

        <TextView
            android:id="@+id/view_large_profile_tv_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_large_profile_tv_type"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/view_large_profile_tv_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_large_profile_tv_special"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_large_profile_tv_type"
            android:layout_marginTop="2dp"
            android:lines="5"
            android:maxWidth="5dp"
            android:minWidth="10dp"
            android:scrollHorizontally="false"
            android:text="special request"
            android:textSize="@dimen/view_large_profile_tv_text_size" />

    </RelativeLayout>
</RelativeLayout>