<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function.chatting.chatting.ChattingActivity">

    <FrameLayout
        android:id="@+id/chatting_fl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/chatting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:title="" />

        <TextView
            android:id="@+id/chatting_toolbar_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="대화하기" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/act_chatting_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chatting_fl_toolbar" />

</RelativeLayout>
