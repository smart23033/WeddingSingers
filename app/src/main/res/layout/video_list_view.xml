<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <ImageView
            android:id="@+id/video_list_iv_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/video_list_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/video_list_iv_picture"
            android:text="nm"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/video_list_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_list_iv_picture"
            android:layout_toRightOf="@+id/video_list_tv_name"
            android:text="brand" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
