<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_singer_video_mgm_rl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:layout_marginLeft="@dimen/view_horizontal_margin"
        android:layout_marginRight="@dimen/view_horizontal_margin"
        android:layout_marginTop="@dimen/view_vertical_margin">

        <com.google.android.youtube.player.YouTubeThumbnailView
            android:id="@+id/view_singer_video_mgm_iv_thumbnail"
            android:layout_width="@dimen/view_singer_video_mgm_iv_thumbnail_width"
            android:layout_height="@dimen/view_singer_video_mgm_iv_thumbnail_height"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/view_singer_video_mgm_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_singer_video_mgm_tv_title_margin_left"
            android:layout_marginTop="@dimen/view_singer_video_mgm_tv_title_margin_top"
            android:layout_toRightOf="@+id/view_singer_video_mgm_iv_thumbnail"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/view_singer_video_mgm_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_singer_video_mgm_tv_title"
            android:layout_marginLeft="@dimen/view_singer_video_mgm_tv_date_margin_left"
            android:layout_marginTop="@dimen/view_singer_video_mgm_tv_date_margin_top"
            android:layout_toRightOf="@+id/view_singer_video_mgm_iv_thumbnail"
            android:text="2016. 6. 25"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_singer_video_mgm_tv_date"
            android:layout_marginLeft="@dimen/view_singer_video_mgm_tv_date_margin_left"
            android:layout_marginTop="@dimen/view_singer_video_mgm_tv_date_margin_top"
            android:layout_toRightOf="@+id/view_singer_video_mgm_iv_thumbnail">

            <ImageView
                android:id="@+id/view_singer_video_mgm_iv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/all_ic_10" />

            <TextView
                android:id="@+id/view_singer_video_mgm_tv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_singer_video_mgm_tv_margin_left"
                android:layout_toRightOf="@+id/view_singer_video_mgm_iv_favorite"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/view_singer_video_mgm_iv_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_singer_video_mgm_iv_hit_margin_left"
                android:layout_toRightOf="@+id/view_singer_video_mgm_tv_favorite"
                android:src="@drawable/all_ic_09" />

            <TextView
                android:id="@+id/view_singer_video_mgm_tv_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_singer_video_mgm_tv_margin_left"
                android:layout_toRightOf="@+id/view_singer_video_mgm_iv_hit"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/view_singer_video_mgm_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_singer_video_mgm_tv_date" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_singer_video_mgm_divider_height"
        android:layout_below="@+id/view_singer_video_mgm_rl_view"
        android:layout_marginBottom="@dimen/view_singer_video_mgm_divider_margin_vertical"
        android:layout_marginLeft="@dimen/view_singer_video_mgm_divider_margin_horizontal"
        android:layout_marginRight="@dimen/view_singer_video_mgm_divider_margin_horizontal"
        android:layout_marginTop="@dimen/view_singer_video_mgm_divider_margin_vertical"
        android:background="@color/view_singer_video_mgm_divider_color" />

</RelativeLayout>